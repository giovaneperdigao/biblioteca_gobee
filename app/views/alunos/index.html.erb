<p id="notice"><%= notice %></p>

<h1>Alunos</h1>

<%= helper_busca(alunos_url, method: "get")%>

<table width="100%">
  <thead>
    <tr>
      <th width="50%">Nome</th>
      <th width="40%">Livro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= aluno.nome %></td>
        <td><%= aluno.livro_atual %></td>
        <td><%= link_to 'Mostrar', aluno %></td>
        <td><%= link_to 'Editar', edit_aluno_path(aluno) %></td>
        <td><%= link_to 'Remover', aluno, method: :delete, data: { confirm: 'Tem certeza que deseja excluir este aluno?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Aluno', new_aluno_path %>
